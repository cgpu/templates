manifest {
    description = 'Template Nextflow'
    mainScript  = 'main.nf'
}

params {
    // input options
    input = false

    // optional
    help = false

    // resources
    max_cpus = 2
    max_memory = 4.GB
    max_time = 8.h
}

profiles {
  docker { docker.enabled = true }
  base {includeConfig 'conf/base.config'}
  standard {includeConfig 'conf/google.config'}
  test {includeConfig 'conf/test.config'}
}